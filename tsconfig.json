{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": [],
    "outDir": "lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/@types/",
      "./node_modules/@types",
    ],
    "declaration": true
  },
  "exclude": ["./src/tests"]
}