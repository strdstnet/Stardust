{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Show all problems",
      "command": "tsc",
      "type": "shell",
      "args": ["-w", "-p", ".", "--noEmit"],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}